<div class='stats-card-container'>
  <p class='stats-card-title'><%= t('home_stats_title') %></p>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_users') %></p>
    <p class='stat-card-value'><%= data[:users] %></p>
  </div>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_convicts') %></p>
    <p class='stat-card-value'><%= data[:convicts] %></p>
  </div>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_notifications') %></p>
    <p class='stat-card-value'><%= data[:notifications] %></p>
  </div>
  <br>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_recorded') %></p>
    <p class='stat-card-value'><%= data[:recorded] %></p>
  </div>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_passed_no_canceled') %></p>
    <p class='stat-card-value'><%= data[:passed_no_canceled] %></p>
  </div>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_future_booked') %></p>
    <p class='stat-card-value'><%= data[:future_booked] %></p>
  </div>
  <br>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_fulfiled') %></p>
    <p class='stat-card-value'><%= data[:fulfiled] %></p>
  </div>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_no_show') %></p>
    <p class='stat-card-value'><%= data[:no_show] %></p>
  </div>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_excused') %></p>
    <p class='stat-card-value'><%= data[:excused] %></p>
  </div>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_canceled') %></p>
    <p class='stat-card-value'><%= data[:canceled] %></p>
  </div>
  <br>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_passed_booked') %></p>
    <p class='stat-card-value'><%= data[:passed_booked] %></p>
  </div>

  <div class='stat-card-container'>
    <p class='stat-card-title'><%= t('home_stats_data_missing') %></p>
    <p class='stat-card-value'><%= data[:passed_booked] * 100 / data[:passed_no_canceled] %> %</p>
  </div>
</div>
