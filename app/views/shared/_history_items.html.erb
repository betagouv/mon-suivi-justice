    <div class="fr-grid-row fr-mt-2w">
      <div class="fr-col">
        <div class="fr-table fr-table--bordered">
          <table>
            <caption><%= t('show_convict_history_title') %></caption>
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Date</th>
                <th scope="col">Ev√®nement</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @history_items.each do |history_item| %>
                <tr>
                  <td>
                    <div  class='show-history-item-icon text-center'>
                      <%= icon('fa', 'circle', class: "icon_#{history_item.event}")%>
                  </div>
                  </td>
                  <td>
                    <%= history_item.created_at.strftime('%d/%m/%Y %H:%M') %>
                  </td>
                  <td><%= t("history_item.#{history_item.event}_title") %> :               <%= history_item.content %>
                  </td>
                  <td>          <% if history_item.appointment? %>
                      <%= link_to t('see_details'), appointment_path(history_item.appointment), class: '' %>
                    <% end %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>