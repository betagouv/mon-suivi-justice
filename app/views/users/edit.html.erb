<h1 class='form-title'><%= t('edit_user_title') %></h1>

<%= simple_form_for @user, html: { class: 'basic-form' } do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email, required: true %>
  <%= f.association :organization, include_blank: false, label: t('activerecord.attributes.user.organization') %>
  <% if (current_user.admin? || current_user.local_admin?) && current_user != @user %>
    <%= f.input :role, collection: ordered_user_roles,
                       label_method: lambda {|k| t("activerecord.attributes.user.user_roles.#{k}")},
                       input_html: { class: 'form-select' } %>
  <% end %>
  <%= f.button :submit, t('submit'), class: 'form-submit-button' %>
<% end %>
