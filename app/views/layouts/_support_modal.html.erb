<div class="modal micromodal-slide support-modal" id="support-modal" aria-hidden="true">
  <div class="modal__overlay" tabindex="-1" data-micromodal-close>
    <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-2-title">
      <header class="modal__header">
        <button class="modal__close support-modal-close" aria-label="Close modal" data-micromodal-close></button>
      </header>
      <main class="modal__content support-modal-content" id="modal-2-content">
        <p class='support-modal-title'><%= t('support.modal_title') %></p>
        <p class='support-modal-text'><%= t('support.modal_text') %></p>

        <%= mail_to ENV['SUPPORT_EMAIL_ADRESS'], ENV['SUPPORT_EMAIL_ADRESS'], class: 'support-modal-email' %>
        <p class='support-modal-warning'><%= t('support.modal_warning') %></p>
        <ul class='support-modal-list'>
          <li class='support-modal-bug'><%= t('support.modal_bug') %></li>
          <li class='support-modal-evolution'><%= t('support.modal_evolution') %></li>
        </ul>
        <p class='support-modal-thanks'><%= t('support.modal_thanks') %></p>
      </main>
    </div>
  </div>
</div>
