<%= image_tag 'logo_msj.svg' %>

<p><%= t("devise.mailer.invitation_instructions.hello", first_name: @resource.first_name) %></p>

<p><%= t("devise.mailer.invitation_instructions.greetings") %></p>

<p><%= t("devise.mailer.invitation_instructions.description") %></p>

<p><%= t("devise.mailer.invitation_instructions.someone_invited_you_html", url: accept_invitation_url(@resource, invitation_token: @token)) %></p>

<% if @resource.invitation_due_at %>
  <p><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>
<% end %>

<p><%= t("devise.mailer.invitation_instructions.warning") %></p>

<p><%= t("devise.mailer.invitation_instructions.documentation", url: 'https://documentation.mon-suivi-justice.beta.gouv.fr/') %></p>

<p><%= t("devise.mailer.invitation_instructions.conclusion") %></p>

<p><%= t("devise.mailer.invitation_instructions.signature_html") %></p>
