<div class='fr-container fr-pb-6w fr-pt-8w'>
  <h1 class='static-title preparer-place-title'><%= t('preparer.spip28.title') %></h1>

  <p class='static-place-intro'><%= t('preparer.spip28.intro') %></p>

  <label for="toggle-menu-place" class='static-dropdown-trigger preparer-menu-trigger'>
    <span class="fr-fi-arrow-right-s-line preparer-menu-picto" id="menu-place-picto-right" aria-hidden="true"></span>
    <span class="fr-fi-arrow-down-s-line preparer-menu-picto preparer-menu-picto-inactive" id="menu-place-picto-down" aria-hidden="true"></span>

    <div class='preparer-menu-text'><%= t('preparer.spip28.question-place') %></div>
  </label>

  <input type='checkbox' id="toggle-menu-place" class='static-hidden-checkbox'>

  <div class='preparer-place-content static-content-container'>
    <div class='preparer-place-header'>
      <div class='preparer-place-picture'><%= image_tag 'static/spip28.jpg', class: 'preparer-place-picture-img' %></div>

      <div class='preparer-place-general-infos'>
        <p class='fr-mb-2w'><%= t('preparer.spip28.place-text1') %></p>

        <%= link_to 'https://goo.gl/maps/Enyr9hqxbU6cNx6X7', target: '_blank', class: 'static-google-map-link' do %>
          <div class='static-google-map-link-button'>
            <%= t('preparer.place-google') %>
          </div>
        <% end %>

        <p class='fr-mb-2w'><%= t('preparer.spip28.place-text2') %></p>
        <p class='fr-mb-2w'><%= t('preparer.spip28.place-text3') %></p>
      </div>
    </div>

    <h3 class='static-tertiary-title fr-mb-2w'><%= t('preparer.place-bus') %></h3>

    <ul class='static-list'>
      <li class='static-list-short-item'><%= t('preparer.spip28.place-bus1') %></li>
      <li class='static-list-short-item'><%= t('preparer.spip28.place-bus2') %></li>
    </ul>

    <%= link_to 'http://www.filibus.fr/ftp/FR_document/web-Chartres%20URBAIN%202021%20OD.pdf', target: '_blank', class: 'static-external-link' do %>
      <%= t('preparer.spip28.place-bus-map') %>
    <% end %>

    <%= link_to 'http://www.filibus.fr/presentation/?rub_code=89', target: '_blank', class: 'static-external-link' do %>
      <%= t('preparer.spip28.place-bus-timetable') %>
    <% end %>

    <h3 class='static-tertiary-title fr-mb-2w'><%= t('preparer.place-car') %></h3>
    <p class='fr-mb-2w'><%= t('preparer.spip28.place-car') %></p>
  </div>

  <label for="toggle-menu-no-show" class='static-dropdown-trigger preparer-menu-trigger'>
    <span class="fr-fi-arrow-right-s-line preparer-menu-picto" id="menu-no-show-picto-right" aria-hidden="true"></span>
    <span class="fr-fi-arrow-down-s-line preparer-menu-picto preparer-menu-picto-inactive" id="menu-no-show-picto-down" aria-hidden="true"></span>
    <div class='preparer-menu-text'><%= t('preparer.question-no-show') %></div>
  </label>

  <input type='checkbox' id="toggle-menu-no-show" class='static-hidden-checkbox'>

  <div class='preparer-no-show-content static-content-container'>
    <p class='fr-mb-2w'><%= t('preparer.absence-text1') %> <%= t('preparer.absence-text2') %> <%= link_to t('preparer.absence-text3'), obligations_personnelles_path %> <%= t('preparer.absence-text4') %></p>
    <p class='fr-mb-2w'><%= t('preparer.spip28.absence-text') %></p>
  </div>

  <label for="toggle-menu-justif" class='static-dropdown-trigger preparer-menu-trigger'>
    <span class="fr-fi-arrow-right-s-line preparer-menu-picto" id="menu-justif-picto-right" aria-hidden="true"></span>
    <span class="fr-fi-arrow-down-s-line preparer-menu-picto preparer-menu-picto-inactive" id="menu-justif-picto-down" aria-hidden="true"></span>
    <div class='preparer-menu-text'><%= t('preparer.question-justif') %></div>
  </label>

  <input type='checkbox' id="toggle-menu-justif" class='static-hidden-checkbox'>

  <div class='preparer-justif-content static-content-container'>
    <p class='fr-mb-2w'><%= t('preparer.justificatifs-text1') %></p>
    <p class='fr-mb-2w'><%= t('preparer.justificatifs-text2') %></p>
    <p class='fr-mb-2w'><%= t('preparer.justificatifs-text3') %></p>

    <ul class='static-list'>
      <li class='static-list-item'><%= t('preparer.justificatifs-type1.html') %></li>
      <li class='static-list-item'><%= t('preparer.justificatifs-type2.html') %></li>
      <li class='static-list-item'><%= t('preparer.justificatifs-type3.html') %></li>
      <li class='static-list-item'><%= t('preparer.justificatifs-type4.html') %></li>
    </ul>

    <div class='static-card static-good-practice-card'>
      <i class='fa fa-thumbs-up 3x static-good-practice-thumb-up'></i>
      <p class='static-link-card-intro static-link-good-practice-intro'><%= t('preparer.justificatifs-bonne-pratique') %></p>
    </div>
  </div>

  <label for="toggle-menu-process" class='static-dropdown-trigger preparer-menu-trigger'>
    <span class="fr-fi-arrow-right-s-line preparer-menu-picto" id="menu-process-picto-right" aria-hidden="true"></span>
    <span class="fr-fi-arrow-down-s-line preparer-menu-picto preparer-menu-picto-inactive" id="menu-process-picto-down" aria-hidden="true"></span>
    <div class='preparer-menu-text'><%= t('preparer.question-process') %></div>
  </label>

  <input type='checkbox' id="toggle-menu-process" class='static-hidden-checkbox'>

  <div class='preparer-process-content static-content-container preparer-head-text'>
    <h2 class='static-secondary-title fr-mb-2w'><%= t('preparer.spip28.head-title1') %></h2>

    <p class='fr-mb-2w'><%= t('preparer.spip28.head-text2') %></p>
    <p class='fr-mb-2w'><%= t('preparer.spip28.head-text3') %></p>

    <ul class='static-list'>
      <li class='static-list-item'><%= t('preparer.spip28.head-text4') %></li>
      <li class='static-list-item'><%= t('preparer.spip28.head-text5.html') %></li>
      <li class='static-list-item'><%= t('preparer.spip28.head-text6.html') %></li>
      <li class='static-list-item'><%= t('preparer.spip28.head-text7') %></li>
    </ul>

    <p class='fr-mb-2w'><%= t('preparer.spip28.head-text8') %></p>
    <p class='fr-mb-2w'><%= t('preparer.spip28.head-text9') %></p>

    <ul class='static-list'>
      <li class='static-list-item'><%= t('preparer.spip28.head-text10') %></li>
      <li class='static-list-item'><%= t('preparer.spip28.head-text11') %></li>
    </ul>

    <h2 class='static-secondary-title fr-mb-2w'><%= t('preparer.spip28.head-text12') %></h2>
    <p class='fr-mb-2w'><%= t('preparer.spip28.head-text13') %></p>

    <div class='static-card static-important-card'>
      <p class='static-link-card-intro'><%= t('preparer.spip28.head-text14.html') %></p>
    </div>
  </div>

  <label for="toggle-menu-lawyer" class='static-dropdown-trigger preparer-menu-trigger'>
    <span class="fr-fi-arrow-right-s-line preparer-menu-picto" id="menu-lawyer-picto-right" aria-hidden="true"></span>
    <span class="fr-fi-arrow-down-s-line preparer-menu-picto preparer-menu-picto-inactive" id="menu-lawyer-picto-down" aria-hidden="true"></span>
    <div class='preparer-menu-text'><%= t('preparer.question-avocat') %></div>
  </label>

  <input type='checkbox' id="toggle-menu-lawyer" class='static-hidden-checkbox'>

  <div class='preparer-lawyer-content static-content-container preparer-head-text'>
    <p class='fr-mb-2w'><%= t('preparer.avocat-text1') %></p>
    <p class='fr-mb-1w'><%= t('preparer.avocat-text2') %></p>

    <ul class='static-list fr-mb-2w'>
      <li class='static-short-list-item'><%= t('preparer.spip28.avocat-local-list1') %> <%= link_to(t("preparer.avocat-link-anchor_html"), t("preparer.spip28.avocat-local-link"), target: "_blank") %></li>
      <li class='static-short-list-item'><%= t('preparer.avocat-list2') %> <%= link_to(t("preparer.avocat-link-anchor_html"), t("preparer.avocat-link2"), target: "_blank") %></li>
    </ul>

    <p class='fr-mb-2w'><%= t('preparer.avocat-text3') %> <%= link_to(t("preparer.avocat-link-anchor_html"), t("preparer.avocat-link3"), target: "_blank") %></p>
  </div>
</div>

<%= javascript_pack_tag 'static/preparer', 'data-turbolinks-eval': false, defer: true %>
