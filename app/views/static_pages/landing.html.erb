    <%= image_tag 'static/text_message.svg', class: 'presentation-picto', alt: "Picto rappel par sms" %>

    <div class='presentation-text-container'>
      <p class='presentation-text'><%= t('static-home.explanation') %></p>
      <p class='presentation-precision'><%= t('static-home.availability') %></p>
    </div>
  </div>
</div>
