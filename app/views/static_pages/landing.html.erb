        <p class='static-home-link-text'><%= t('static-home.preparer-text') %></p>
      </div>
      <div class='static-home-link-button static-home-link-preparer'>
        <p class='static-home-link-button-head'><%= t('static-home.preparer-button-head') %></p>
        <p class='static-home-link-button-sub'><%= t('static-home.preparer-button-sub') %></p>
      </div>
    <% end %>
  </div>

  <div class='static-home-link-container'>
