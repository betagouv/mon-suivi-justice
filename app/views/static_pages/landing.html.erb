      <div class='static-home-link-button static-home-link-comprendre'>
        <p class='static-home-link-button-head'><%= t('static-home.comprendre-button-head') %></p>
        <p class='static-home-link-button-sub'><%= t('static-home.comprendre-button-sub') %></p>
      </div>
    <% end %>
  </div>

  <div class='static-home-link-container'>
    <%= link_to ma_reinsertion_path, class: 'static-home-link' do %>
      <div class='static-home-link-wrapper'>
        <div class='static-home-link-picto'><%= image_tag 'static/home_picto_investir.svg', class: 'static-home-link-picto-img', alt: "Picto investir ma réinsertion" %></div>
        <p class='static-home-link-text'><%= t('static-home.investir-text') %></p>
