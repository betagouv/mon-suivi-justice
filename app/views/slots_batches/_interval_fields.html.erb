  <div class="time required slot_batch_interval_time fr-my-2w fr-p-2w new-slot-time-fields-box">
    <div class="form-label">
      <label class="time required form-label" for="slot_batch_start_time_1i">
        <abbr title="required">*</abbr> Premier Créneau</label>
    </div>
    <div class="form-time-select-fields form-input-wrapper">

      <select id="slot_batch_start_time_1i" name="start_times[]" class="time required form-select fr-input">
        <option value="" label=" "></option>
        <% (6..20).each do |o| %>
          <option value=<%= o %>><%= o %></option>
        <% end %>
      </select> :
      <select id="slot_batch_start_time_2i" name="start_times[]" class="time required form-select fr-input">
        <option value="" label=" "></option>
        <% ['00', '05', '10', '15', '20', '25', '30', '35', '40', '45', '50', '55'].each do |o| %>
          <option value=<%= o %>><%= o %></option>
        <% end %>
      </select>

    </div>
    <div class="form-label">
      <label class="time required form-label" for="slot_batch_end_time_1i">
        <abbr title="required">*</abbr> Dernier Créneau</label>
    </div>
    <div class="form-time-select-fields form-input-wrapper">
      <select id="slot_batch_end_time_1i" name="end_times[]" class="time required form-select fr-input">
        <option value="" label=" "></option>
        <% (6..20).each do |o| %>
          <option value=<%= o %>><%= o %></option>
        <% end %>
      </select> :
      <select id="slot_batch_end_time_2i" name="end_times[]" class="time required form-select fr-input">
        <option value="" label=" "></option>
        <% ['00', '05', '10', '15', '20', '25', '30', '35', '40', '45', '50', '55'].each do |o| %>
          <option value=<%= o %>><%= o %></option>
        <% end %>
      </select>

    </div>
    <label for="interval_1i" class="required form-label"><abbr title="required">*</abbr> Intervalle</label>
    <input type="number" id="interval_1i" name="intervals[]" min="1" max="60" value="15" class="fr-input">
    <button class="fr-btn fr-btn--tertiary-no-outline fr-mt-2w alert-link fr-col--middle" onclick="this.parentNode.remove();">Supprimer</button>
  </div>